{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "kill git process",
			"type": "shell",
			"command": "taskkill /IM git.exe /F",
			"problemMatcher": [],
			"group": "none"
		},
		{
			"label": "git status",
			"type": "shell",
			"command": "git status",
			"problemMatcher": [],
			"group": "none"
		},
		{
			"label": "show branch",
			"type": "shell",
			"command": "git branch",
			"problemMatcher": [],
			"group": "none"
		},
		{
			"label": "git-check",
			"type": "shell",
			"command": "git status -s",
			"problemMatcher": []
		},
		{
			"label": "commit-merge",
			"type": "shell",
			"command": "git add .gitignore; git add -u; git commit -m \"Merge rename-to-flare into B4uti4github-patch-1 and remove tracked Qt files\"",
			"problemMatcher": []
		},
		{
			"label": "cleanup-gitlock",
			"type": "shell",
			"command": "Remove-Item -Force .git\\index.lock; git commit -m \"Merge rename-to-flare into B4uti4github-patch-1 and remove tracked Qt files\"",
			"problemMatcher": []
		},
		{
			"label": "watch logs",
			"type": "shell",
			"command": "python scripts/log_watcher.py",
			"problemMatcher": [],
			"isBackground": true
		},
		{
			"label": "cmake configure",
			"type": "shell",
			"command": "cmake -S flare/sources -B build -G \"Ninja\" -DCMAKE_BUILD_TYPE=RelWithDebInfo",
			"problemMatcher": ["$gcc"],
			"group": { "kind": "build", "isDefault": false }
		},
		{
			"label": "cmake build",
			"type": "shell",
			"command": "cmake --build build --config RelWithDebInfo --parallel 4",
			"problemMatcher": ["$gcc"],
			"group": "build"
		}
	]
}